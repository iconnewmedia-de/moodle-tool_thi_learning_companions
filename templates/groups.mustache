<h1>{{#str}}administration_head, tool_learningcompanions{{/str}}</h1>
<h2 class="mb-5">{{#str}}groupoverview, tool_learningcompanions{{/str}}</h2>
{{#hasgroups}}
    <table class="stripe hover compact" id="allgroupstable" data-paging="true" data-page-length="50">
        <thead>
            <tr>
                <th>{{#str}}groupname, tool_learningcompanions{{/str}}</th>
                <th>{{#str}}membercount, tool_learningcompanions{{/str}}</th>
                <th>{{#str}}groupdescription, tool_learningcompanions{{/str}}</th>
                <th>{{#str}}groupcreatedby, tool_learningcompanions{{/str}}</th>
                <th>{{#str}}groupadmins, tool_learningcompanions{{/str}}</th>
                <th>{{#str}}grouptimecreated, tool_learningcompanions{{/str}}</th>
                <th>{{#str}}grouplastactive, tool_learningcompanions{{/str}}</th>
                <th>{{#str}}closedgroup, tool_learningcompanions{{/str}}</th>
                <th>{{#str}}actions, tool_learningcompanions{{/str}}</th>
            </tr>
        </thead>
        <tbody>
        {{#groups}}
            <tr>
                <td>
                    <a href="{{cfg.wwwroot}}/local/learningcompanions/chat.php?groupid={{id}}">{{name}}</a>
                </td>
                <td>
                    {{membercount}}
                </td>
                <td {{#descriptioncut}} data-balloon="{{origindescription}}" data-balloon-pos="up" data-balloon-blunt data-balloon-length="xlarge" {{/descriptioncut}}>
                    {{{description}}}
                </td>
                <td>
                    <span class="groupcreaterprofilelink">
                        <a href="{{createdby_profileurl}}">{{createdby_fullname}}</a>
                    </span>
                </td>
                <td>
                    {{#admins}}
                        <span class="groupadminprofilelink">
                            <a href="{{profileurl}}">{{fullname}}</a>
                        </span>
                    {{/admins}}
                </td>
                <td data-order="{{timecreated}}">
                    {{timecreated_dmY}}
                </td>
                <td data-order="{{last_active_time}}">
                    {{last_active_time_dmy}}
                </td>
                <td>
                    {{#closedgroup}}
                        <i class="icon fa fa-check"></i>
                    {{/closedgroup}}
                </td>
                <td><span class="js-delete-group" data-balloon="{{#str}}delete{{/str}}" data-balloon-pos="left" data-groupid="{{id}}"><i class="fa fa-trash"></i></span></td>
            </tr>
        {{/groups}}
        </tbody>
    </table>
{{/hasgroups}}
{{^groups}}
    <p>{{#str}}nogroups, tool_learningcompanions{{/str}}</p>
{{/groups}}
<a class="btn btn-primary mt-5" href="{{cfg.wwwroot}}/admin/tool/learningcompanions/index.php">{{#str}}back_to_admin_dashboard, tool_learningcompanions{{/str}}</a>