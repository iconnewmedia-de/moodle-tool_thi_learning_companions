<h1 class="my-5">{{#str}}administration_head, tool_learningcompanions{{/str}}</h1>
<div class="container-fluid">
    {{#rows}}
        <div class="row">
            {{#items}}
                <div class="col-xl-6 col-sm-12 mb-3">
                    <div class="card text-white bg-primary overflow-hidden h-100">
                        <div class="card-body">
                            <div class="card-body-icon">
                                <i class="{{icon}} display-4 pull-left mr-4"></i>
                            </div>
                            <h2 class="mr-5 mt-3"><a href="{{link}}" class="text-light">{{title}}</a></h2>
                        </div>
                        <a class="card-footer text-white clearfix small z-1" href="{{link}}">
                            <span class="float-left">{{linktitle}}</span>
                            <span class="float-right">
                        <i class="fa fa-angle-right"></i>
                    </span>
                        </a>
                    </div>
                </div>
            {{/items}}
        </div>
    {{/rows}}
</div>